<p><%= sort_link(@search, :updated_at, '更新日', default_order: :desc) %></p>
<p><%= sort_link(@search, :cost, 'コスト', default_order: :desc) %></p>
      <p><%= sort_link(@search, :likes_count, 'いいね', default_order: :desc) %></p>

<div class="container">
  <div class="row">
<!--#検索機能2/3ここから-->
<%= search_form_for @search do |f| %>      <!--, url: products_path-->
  <%= f.label :tilte, 'タイトルor本文' %>
  <%= f.search_field :title_or_body_cont %>
  <%= f.submit '検索' %>
<% end %>
<!--#検索機能2/3ここまで-->

</div>

</div>

<p class="alert"><%= alert %></p>


<h3 class="page-center">便利商品一覧</h3>
<div class='container'>
    <!--<div class="card-deck">-->

  <div class='row'>
    <!--<div class='col-4'>-->

      <% @products.each do |product| %>

      <div class="card-group" style="width:23rem">                   <!--card-groupでBootstrapのcardを横並び(これで画面縮めてもcardが縮まらない)-->
<div class="card" >

  <!--<div class="column flex-direction:row">               cardが縦に並んでしまう-->




  <div class="card-body">

        <div class="swiper-container">　　　　　　　　　　　　　　　　　　　　<!--card-bodyクラス内に入れないと画像のレイアウトが崩れる、、-->
      <div class="swiper-wrapper">
        <% if product.photos.present? %>
          <% product.photos.each do |photo| %>
            <div class="swiper-slide">
              <%= link_to product_path(product) do %>
                <%= attachment_image_tag photo, :image, class: 'card-img-top' %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="swiper-slide">
            <%= link_to product_path(product) do %>
              <%= image_tag 'no_image.png', class: 'card-img-top' %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="swiper-button-prev swiper-button-white"></div>
      <div class="swiper-button-next swiper-button-white"></div>
      <div class="swiper-pagination swiper-pagination-white"></div>
    </div>

    <h5 class="card-title">タイトル：<%= link_to product.title, product_path(product) %></h5>
    <p class="card-text line-clamp">本文：<%= link_to product.body, product_path(product) %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item text-center">コスト：￥<%= product.cost.to_i.to_s(:delimited) %></li>                                     <!--日本時間に設定1/2(strftime)-->
    <li class="list-group-item text-center">
      更新日：<%= product.updated_at.strftime("%Y/%m/%d") %></li>
    <li class="list-group-item text-center">
      <%= "コメント：#{product.post_comments.count}件" %>
      <i class="fas fa-heart ml-5"></i><%= product.likes.count %>件
    </li>
    <li class="list-group-item">タグ：<%= render 'tag_list', tag_list: product.tag_list %></li>                                                       <!--タグ機能4*2/7?-->
  </ul>
  <div class="card-body m-auto">
    投稿者：
    <%= link_to product.user.name, user_path(product.user.id), class: 'mr-2' %>
    <%= link_to user_path(product.user.id) do %>
<%= attachment_image_tag product.user, :profile_image, fallback: 'no_image.png', size: '60x60' %>
<% end %>
  </div>

  <!--</div>-->

</div>
</div>

  <% end %>

  <!--</div>-->
</div>
<div class="text-center mt-3 mb-3 ">
<%= paginate @products %>
</div>
<!--</div>-->
</div>




