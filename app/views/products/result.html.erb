<h3 class="page-center">検索結果</h3>




<div class='container'>
        <p><%= sort_link(@search, :updated_at, '更新日', default_order: :desc) %></p>
      <p><%= sort_link(@search, :cost, 'コスト', default_order: :desc) %></p>
      <p><%= sort_link(@search, :likes_count, 'いいね', default_order: :desc) %></p>
  <div class='row'>
    

      <% @search_products.each do |sp| %>
      <div class="card-group" style="width:23rem">
<div class="card" >
  <div class="card-body">


        <div class="swiper-container">　　　　　　　　　　　　　　　　　　　　<!--card-bodyクラス内に入れないと画像のレイアウトが崩れる、、-->
      <div class="swiper-wrapper">
        <% if sp.photos.present? %>
          <% sp.photos.each do |photo| %>
            <div class="swiper-slide">
              <%= link_to product_path(sp) do %>
                <%= attachment_image_tag photo, :image, class: 'card-img-top' %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="swiper-slide">
            <%= link_to product_path(sp) do %>
              <%= image_tag 'no_image.png', class: 'card-img-top' %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="swiper-button-prev swiper-button-white"></div>
      <div class="swiper-button-next swiper-button-white"></div>
      <div class="swiper-pagination swiper-pagination-white"></div>
    </div>


    <h5 class="card-title">タイトル：<%= link_to sp.title, product_path(sp) %></h5>
    <p class="card-text line-clamp">本文：<%= link_to sp.body, product_path(sp) %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item text-center">コスト：￥<%= sp.cost.to_i.to_s(:delimited) %></li>                                     <!--日本時間に設定1/2(strftime)-->
    <li class="list-group-item text-center">
      更新日：<%= sp.updated_at.strftime("%Y/%m/%d") %></li>
    <li class="list-group-item text-center">
      <%= "コメント：#{sp.post_comments.count}件" %>
      <i class="fas fa-heart ml-5"></i><%= sp.likes.count %>件
    </li>
    <li class="list-group-item">タグ：<%= render 'tag_list', tag_list: sp.tag_list %></li>                                                       <!--タグ機能4*2/7?-->
  </ul>
  <div class="card-body m-auto">
    投稿者：
    <%= link_to sp.user.name, user_path(sp.user.id), class: 'mr-2' %>
    <%= link_to user_path(sp.user.id) do %>
<%= attachment_image_tag sp.user, :profile_image, fallback: 'no_image.png', size: '60x60' %>
<% end %>
  </div>
</div>
</div>

  <% end %>
</div>
<div class="text-center mt-3 mb-3 ">
<%= paginate @products %>
</div>
</div>



