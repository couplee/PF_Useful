<h1>ユーザー一覧</h1>

<% @users.each do |user| %>
  <%= link_to user_path(user) do %>
    <%= attachment_image_tag user, :profile_image, fallback: 'no_image.png', size: '100x100' %>
  <% end %>
  <%= link_to user.name, user_path(user) %>
<div class='content'>
  投稿数:<%= user.products.count %>
</div>
<% end %>

<%= paginate @users %>