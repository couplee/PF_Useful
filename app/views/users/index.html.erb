<div class="container">
  <h1 class="text-center">ユーザー一覧</h1>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-3">
        <div class="card text-center">
          <div class="card-header card-group">
            お名前：<%= link_to user.name, user_path(user) %>
          </div>
          <div class="card-body">
            <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, fallback: 'no_image.png', size: '100x100' %>
            <% end %>
          </div>
          <div class="card-footer text-muted card-group">
            <div class='content'>
            商品投稿数:<%= user.products.count %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @users %>
</div>